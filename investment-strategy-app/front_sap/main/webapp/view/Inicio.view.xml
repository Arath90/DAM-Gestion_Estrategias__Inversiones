<mvc:View controllerName="main.controller.Inicio"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.f"
    xmlns:m="sap.m">
    <DynamicPage toggleHeaderOnTitleClick="false">
        <title>
            <DynamicPageTitle><heading><m:Title text="Inicio" level="H2" /></heading></DynamicPageTitle>
        </title>
        <content>
            <m:VBox class="sapUiLargeMargin" id="inicioContainer" >
                <m:Text text="Bienvenido al panel principal de estrategias de inversion." />
                <m:ScrollContainer id="inicioContScroll" class="InicioScrollContainer"> 
                    <m:VBox id="vbxcont">
                    <m:Button text="Capital Total"/>
                    <m:Button text="P/L Diario" tooltip="Desde la apertura"/>
                    <m:Button text="Ordenes Abiertas" tooltip="conteo de Orders"/>
                    <m:Button text="Limite de Perdida" tooltip="Diario"/>
                    </m:VBox>

                </m:ScrollContainer>
            </m:VBox>
        </content>
    </DynamicPage>
</mvc:View>


